<%= form_for([@post, @post.comments.build]) do |f| %>
  <div class="comment">
    <div class="col-md-11 offset-md-1">
      <div class="form-group">
        <%= f.text_area :content, class: 'form-control', placeholder:"Write a comment..." %>
      </div>
      <div class="form-group">
        <%= f.submit 'Post comment', class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
<% end %>
