<div class="container">
  <h1>Conversations</h1>
  <%= link_to 'Start New Conversation', new_post_path %>
  <br>
  <h6> Conversation Categories </h6>
  <%= render 'shared/nav' %>

  <% @posts.each do |post| %>
       <h1><%= link_to post.title, post %></h1>
       <h6>Conversation started by <%= post.member.firstname %> <%= post.member.lastname %></h6>
       <p><%= post.content %></p>
  <% end %>

</div>
